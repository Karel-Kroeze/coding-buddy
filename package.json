        "@types/mz": "0.0.32",
        "@types/node": "^11.12.2",
        "@types/passport": "^1.0.0",
        "@types/passport-local": "^1.0.33",
        "@types/summernote": "^0.8.7",
        "@types/vis": "^4.21.12",
        "concurrently": "^7.0.0",
        "parcel": "^2.0.0-beta.2",
