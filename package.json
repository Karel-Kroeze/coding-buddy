{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "node server.js",
        "serve": "concurrently -n docker,ts,views,css,img -c magenta,magenta,cyan,blue npm:watch-docker npm:watch-ts npm:watch-pug npm:watch-sass npm:watch-img",
        "build": "concurrently npm:build-*",
        "watch-docker": "docker-compose -f docker-compose.local.yml up --build",
        "watch-ts": "tsc -w",
        "watch-pug": "sane \"cp -r ./views ./dist\" ./views",
        "watch-sass": "node-sass -w -o ./dist/assets/style ./src/assets/style",
        "watch-img": "sane \"cp -r ./src/assets/img ./dist/assets\" ./src/assets/img",
        "build-docker": "docker-compose build",
        "build-ts": "tsc",
        "build-pug": "cp -r ./views ./dist",
        "build-sass": "node-sass -o ./dist/assets/style ./src/assets/style",
        "build-img": "cp -r ./src/assets/img ./dist/assets"
    },
    "feedback": "./dist/assets/js/renderers/feedback.js",
    "text": "./dist/assets/js/renderers/text.js",
    "targets": {
        "text": {
            "source": "./renderers/text.ts",
            "context": "browser",
            "outputFormat": "global",
            "publicUrl": ".",
            "sourceMap": false
        },
        "feedback": {
            "source": "./renderers/feedback.ts",
            "context": "browser",
            "outputFormat": "global",
            "publicUrl": ".",
            "sourceMap": false
        }
    },
    "browserslist": [
        "> 0.2%",
        "not dead"
    ],
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/mustache": "^4.1.2",
        "authorized": "^1.0.0",
        "bulma": "^0.7.4",
        "bulma-checkradio": "^2.1.0",
        "bulma-switch": "^2.0.0",
        "cookie-parser": "^1.4.4",
        "dotenv": "^7.0.0",
        "express": "^4.16.4",
        "express-session": "^1.15.6",
        "method-override": "^3.0.0",
        "mongodb": "^4.3.1",
        "mongoose": "^6.1.8",
        "morgan": "^1.9.1",
        "multer": "^1.4.1",
        "mustache": "^4.2.0",
        "mz": "^2.7.0",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "pug": "^3.0.2",
        "vis": "^4.21.0"
    },
    "devDependencies": {
